<h1>Dogs List:</h1>

@if (@Model.Count == 0)
{
    <h3>Sorry but it looks like all of our Dogs have found new homes.</h3>
}
else
{
    <p>We currently have @Model.Count Dog(s).</p>
}
<ol>
    @foreach (Dog dog in Model)
    {
        <ul>
            <li>Name: @dog.DogName</li>
            <li>Breed: @dog.DogBreed</li>
        </ul>
        <a href="/Dogs/Details/@(dog.DogId)"><p>View Details</p></a>
        <br>
    }
</ol>

<p class="nav">@Html.ActionLink("Add new Dog", "Create")</p>